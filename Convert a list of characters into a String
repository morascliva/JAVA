class Solution {
    public String chartostr(char arr[], int N) {
        // Create a StringBuilder to efficiently build the string
        StringBuilder sb = new StringBuilder();
        
        // Iterate through the array and append each character to the StringBuilder
        for (int i = 0; i < N; i++) {
            sb.append(arr[i]);
        }
        
        // Convert StringBuilder to String and return
        return sb.toString();
    }
}
