
class Solution{

    public boolean IsPerfect(int a[], int n)
    {
       int left =0;
       int right= a.length - 1;

       while( left <  right)
       {
           if ( a[left]!=a[right] )
           {
               return false;
           }

           left++;
           right --;
       }

       return true;
    }

}
