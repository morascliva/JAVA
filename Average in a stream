class Solution {
    float[] streamAvg(int[] arr, int n) {
        float[] averages = new float[n]; // Array to store averages
        int sum = 0; // Variable to keep track of the sum of numbers seen so far
        
        for (int i = 0; i < n; i++) {
            sum += arr[i]; // Update the sum
            averages[i] = (float) sum / (i + 1); // Calculate the average up to the current index
        }
        
        return averages;
    }
}
