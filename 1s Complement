class Solution {
    static String onesComplement(String S, int N) {
        StringBuilder result = new StringBuilder();

        // Iterate through each character (bit) of the binary number
        for (int i = 0; i < N; i++) {
            char bit = S.charAt(i);

            // Toggle the bit: '0' becomes '1', '1' becomes '0'
            if (bit == '0') {
                result.append('1');
            } else {

                result.append('0');
            }
        }

        return result.toString();
    }
}
